                                                                SET @Payload = (SELECT Value FROM @Str WHERE Index = CAST(@Arg AS INT));
                                                            END
                                                        END
                                                    END
                                                END
                                            END
                                        END
                                    END
                                END
                            END
                        END
                    END
                END
            END
        END
    END
    
    -- prototip => plugins(<str>, <str>)
