CREATE FUNCTION Delay (FLOAT Sn)
RETURNS BIT
BEGIN
    -- Delay (bekleme süresi) için gerekli fonskiyon. Flowgorithm;
    -- setTimeout()
    -- time.sleep()
    -- gibi fonksiyon barındırmadığı için, gecikmeyi while döngüsü ile yaparız.
    DECLARE @Payload BIT;
    DECLARE @Ms FLOAT;
    
    SET @Ms = @Sn * 30000;
    
    -- 1 Saniye ≊ 30.000 Sayım
    -- 1 Sayım = 3,14e-5
    DECLARE @n INT;
    
    SET @n = 0;
    WHILE (@n < @Ms)
    BEGIN
        SET @n = @n + 1;
    END
    SET @Payload = True;
    
    RETURN Payload;
END;

